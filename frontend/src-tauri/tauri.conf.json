{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "AutoTest AI",
  "version": "1.0.0",
  "identifier": "com.autotest.ai",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "AutoTest AI",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' http://localhost:* https://api.anthropic.com https://api.github.com https://*.atlassian.net"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "AI-powered test automation tool",
    "longDescription": "AutoTest AI helps you generate, manage, and run automated tests using AI. Features include AI-powered test generation, visual scenario builder, multi-runner support (Cypress, Playwright), and integration with GitHub and Jira.",
    "copyright": "Copyright (c) 2024 AutoTest AI",
    "publisher": "AutoTest AI",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "exceptionDomain": null,
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null,
      "frameworks": [],
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": "http://timestamp.digicert.com",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "nsis": {
        "displayLanguageSelector": true,
        "languages": ["English", "Spanish", "French", "German", "Japanese", "Chinese"],
        "installerIcon": "icons/icon.ico",
        "headerImage": null
      },
      "wix": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "section": "devel",
        "priority": "optional",
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"]
      },
      "rpm": {
        "release": "1"
      }
    },
    "resources": [],
    "externalBin": []
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
