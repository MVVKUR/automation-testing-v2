# =============================================================================
# Automation Testing E2E Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values for your environment

# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------
NODE_ENV=development

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=ate2e
POSTGRES_PASSWORD=ate2e_secret_change_me
POSTGRES_DB=ate2e_db
POSTGRES_PORT=5432
DATABASE_URL=postgres://ate2e:ate2e_secret_change_me@localhost:5432/ate2e_db

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_PASSWORD=redis_secret_change_me
REDIS_PORT=6379
REDIS_URL=redis://:redis_secret_change_me@localhost:6379

# -----------------------------------------------------------------------------
# Qdrant (Vector Database)
# -----------------------------------------------------------------------------
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=qdrant_secret_change_me
QDRANT_URL=http://localhost:6333

# -----------------------------------------------------------------------------
# MinIO (S3-Compatible Storage)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=minio_secret_change_me
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT=localhost

# -----------------------------------------------------------------------------
# Core API Service
# -----------------------------------------------------------------------------
CORE_API_PORT=3000
JWT_SECRET=jwt_secret_change_in_production_use_long_random_string
JWT_EXPIRATION=7d

# -----------------------------------------------------------------------------
# AI Agent Service
# -----------------------------------------------------------------------------
AI_AGENT_PORT=8000

# OpenAI Configuration (optional - for GPT models)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic Configuration (optional - for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Default AI Provider (openai or anthropic)
DEFAULT_AI_PROVIDER=openai

# -----------------------------------------------------------------------------
# Test Runner Service
# -----------------------------------------------------------------------------
TEST_RUNNER_PORT=3001

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
FRONTEND_PORT=3002
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# -----------------------------------------------------------------------------
# Security & Authentication
# -----------------------------------------------------------------------------
# Session secret for cookie encryption
SESSION_SECRET=session_secret_change_me_in_production

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3002,http://localhost:3000

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=json

# Sentry DSN (optional - for error tracking)
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# File Upload
# -----------------------------------------------------------------------------
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=.png,.jpg,.jpeg,.gif,.pdf,.json,.csv

# -----------------------------------------------------------------------------
# Test Execution
# -----------------------------------------------------------------------------
DEFAULT_TEST_TIMEOUT=30000
MAX_PARALLEL_TESTS=5
SCREENSHOT_QUALITY=80
VIDEO_RECORDING_ENABLED=false
